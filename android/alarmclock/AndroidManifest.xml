<?xml version="1.0" encoding="utf-8"?>
<manifest package="com.angrydoughnuts.android.alarmclock"
      android:versionCode="1" xmlns:android="http://schemas.android.com/apk/res/android" android:versionName="1.0">

  <application android:icon="@drawable/icon" android:label="@string/app_name" android:debuggable="true">
    <activity android:name=".ActivityAlarmClock" android:clearTaskOnLaunch="true" android:launchMode="singleTask">
      <intent-filter>
        <action android:name="android.intent.action.MAIN"></action>
        <category android:name="android.intent.category.LAUNCHER"></category>
      </intent-filter>
    </activity>
    <activity android:name="ActivityAlarmNotification" android:screenOrientation="portrait" android:launchMode="singleInstance"></activity>
    <activity android:name="ActivitySettings"></activity>
    <activity android:name="ActivityPendingAlarms"></activity>
    <service android:name="AlarmClockService"></service>
    <receiver android:name="ReceiverAlarm"></receiver>
    <receiver android:name="ReceiverNotificationRefresh"></receiver>
    <receiver android:name="ReceiverDeviceBoot">
      <intent-filter>
        <action android:name="android.intent.action.BOOT_COMPLETED"></action>
      </intent-filter>
    </receiver>
    <receiver android:name="RecevierTimeZoneChange">
      <intent-filter>
        <action android:name="android.intent.action.TIMEZONE_CHANGED"></action>
      </intent-filter>
    </receiver>
  </application>

  <uses-sdk android:minSdkVersion="4" android:targetSdkVersion="5"/>
  <uses-permission android:name="android.permission.WAKE_LOCK"></uses-permission>
  <uses-permission android:name="android.permission.DISABLE_KEYGUARD"></uses-permission>
  <uses-permission android:name="android.permission.RECEIVE_BOOT_COMPLETED"></uses-permission>
  <uses-permission android:name="android.permission.VIBRATE"></uses-permission>
  <!-- TODO(cgallek): This is only for the exception handler.  Remove it eventually? -->
  <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE"></uses-permission>
</manifest> 
