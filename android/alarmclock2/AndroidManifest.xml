<?xml version="1.0" encoding="utf-8"?>
<manifest
    xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.angrydoughnuts.android.alarmclock2"
    android:versionCode="12"
    android:versionName="1.11">
  <uses-sdk android:minSdkVersion="23" android:targetSdkVersion="23"/>
  <uses-permission android:name="android.permission.WAKE_LOCK" />

  <application
      android:label="@string/app_name"
      android:icon="@drawable/ic_launcher"
      android:allowBackup="false" >
    <activity
        android:name=".AlarmClockActivity"
        android:label="@string/app_name">
      <intent-filter>
        <action android:name="android.intent.action.MAIN" />
        <category android:name="android.intent.category.LAUNCHER" />
      </intent-filter>
    </activity>
    <service android:name=".AlarmClockService" android:exported="false" />
    <service android:name=".AlarmNotificationService" android:exported="false"/>
    <receiver android:name=".AlarmNotificationService$AlarmTriggerReceiver" />
    <provider
        android:name=".AlarmClockProvider"
        android:authorities="com.angrydoughnuts.android.alarmclock2.provider"
        android:exported="false" />
    <activity
        android:name=".AlarmNotificationActivity"
        android:launchMode="singleInstance"
        android:taskAffinity=""
        android:excludeFromRecents="true" />
  </application>
</manifest>
