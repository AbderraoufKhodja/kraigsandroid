<?xml version="1.0" encoding="utf-8"?>
<manifest
    xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.angrydoughnuts.android.alarmclock2"
    android:versionCode="12"
    android:versionName="1.11">
  <application
      android:label="@string/app_name"
      android:icon="@drawable/ic_launcher">
    <activity
        android:name="ActivityAlarmClock"
        android:label="@string/app_name">
      <intent-filter>
        <action android:name="android.intent.action.MAIN" />
        <category android:name="android.intent.category.LAUNCHER" />
      </intent-filter>
    </activity>

    <service android:name=".ServiceAlarmClock" android:exported="false" />
    <service android:name=".ServiceNotification" android:exported="false" />
    <receiver android:name=".ServiceNotification$AlarmTriggerReceiver" />
    <provider
        android:name=".ProviderAlarmClock"
        android:authorities="com.angrydoughnuts.android.alarmclock2.provider"
        android:exported="false" />

    <activity
        android:name=".ActivityAlarmNotification"
        android:launchMode="singleInstance"
        android:taskAffinity=""
        android:excludeFromRecents="true" />
  </application>

  <uses-sdk android:minSdkVersion="23" android:targetSdkVersion="23"/>
  <uses-permission android:name="android.permission.WAKE_LOCK" />
</manifest>
